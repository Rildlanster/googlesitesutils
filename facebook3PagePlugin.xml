<Module>
<ModulePrefs title="Google Sites Like Button" width="200" height="20" scrolling="false" title_url="http://luciocosta.estou.com.vc" description="Facebook Page Plugin for Google Sites" author="Rodrigo Nogueira" author_email="rodrigo.b.nogueira@gmail.com" author_affiliation="estou.com.vc" author_location="Brasilia-DF"  author_link="http://estou.com.vc/" directory_title="Facebook Buttons"></ModulePrefs>
<UserPref name="url" display_name="Facebook Page URL:" datatype="string" default_value=""/>
<UserPref name="pagetitle" display_name="Page Title:" datatype="string" default_value=""/>
<UserPref name="showfaces" display_name="Show Faces:" datatype="enum" default_value="false">
  <EnumValue value="false" display_value="No"/>
  <EnumValue value="true" display_value="Yes"/>
</UserPref>
<UserPref name="hidecover" display_name="Hide Cover:" datatype="enum" default_value="true">
  <EnumValue value="false" display_value="No"/>
  <EnumValue value="true" display_value="Yes"/>
</UserPref>
  
<Content type="html">  
<![CDATA[
<html>
<head>
<title>Facebook Page Plugin</title>
</head>

<body style="background-color:transparent;">

<div id="fb-root"></div>
<script>(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.net/pt_BR/sdk.js#xfbml=1&version=v2.8&appId=324094871263834";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>

<div id="google_sites_facebook_page_plugin" style="background-color:transparent;">
  <img src="http://www.google.com/ig/images/spinner.gif">
</div>

<script type="text/javascript"> 
  // Get userprefs 
  var prefs = new gadgets.Prefs(); 
  var url = prefs.getString("url");
  var showfaces = prefs.getString("showfaces"); 
  var hidecover = prefs.getString("hidecover");
  var pagePlugin = '<div class="fb-page" data-href="https://www.facebook.com/luciocostadf" data-tabs="timeline" data-width="800" data-height="300" data-small-header="false" data-adapt-container-width="false" data-hide-cover="true" data-show-facepile="false"><blockquote cite="https://www.facebook.com/luciocostadf" class="fb-xfbml-parse-ignore"><a href="https://www.facebook.com/luciocostadf">Moradores do Lúcio Costa / Guará</a></blockquote></div>';
  var dest = document.getElementById('google_sites_facebook_page_plugin'); 
  dest.innerHTML = pagePlugin; 
</script>

</body></html>
]]>
</Content>
</Module>
